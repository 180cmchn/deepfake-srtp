# Application Settings
APP_NAME=Deepfake Detection Platform
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=True

# Database Settings
DATABASE_URL=sqlite:///./deepfake_detection.db
# For PostgreSQL: postgresql://user:password@localhost/dbname
# For MySQL: mysql://user:password@localhost/dbname

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Model Settings
DEFAULT_MODEL_TYPE=vgg
MODEL_INPUT_SIZE=224
MAX_CONCURRENT_TRAINING_JOBS=2
SUPPORTED_MODELS=vgg,lrcn,swin,vit,resnet

# File Upload Settings
MAX_FILE_SIZE=100
UPLOAD_DIR=uploads
DATA_DIR=data
MODELS_DIR=models

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# GPU Settings
GPU_ENABLED=True
CUDA_VISIBLE_DEVICES=0

# Processing Settings
BATCH_SIZE=32
LEARNING_RATE=0.001
EPOCHS=50
VALIDATION_SPLIT=0.2

# API Settings
API_V1_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Background Tasks
TASK_QUEUE=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090

# External Services
# Add any external service URLs or API keys here
